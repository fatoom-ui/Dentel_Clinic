<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineDentalClinc</title>

    <link rel="stylesheet" href="~/css/StyleSheetLeouma.css" /> 
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/Style.css" asp-append-version="true" />   
    <link rel="preconnect" href="https://fonts.googleapis.com"> 
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">  
    <link rel="stylesheet" href="~/OnlineDentalClinic.styles.css" asp-append-version="true" />  
</head>

<body>

    <header>

        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark"> 
            <div class="container-fluid"> 

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OnlineDentalClinic</a> 
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" 
                aria-expanded="false" aria-label="Toggle navigation"> 
                    <span class="navbar-toggler-icon"></span> 
                </button> 
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between"> 
                    <ul class="navbar-nav flex-grow-1"> 

                        
                        <li class="nav-item"> 
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a> 
                        </li> 
                        @* <li class="nav-item"> *@
                        @*     <a class="nav-link" asp-area="" asp-controller="Doctor" asp-action="doctors">Doctors</a> *@
                        @* </li> *@

                      
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"> 
                                <a class="nav-link active" asp-area="" asp-controller="Patients" asp-action="Index">Patient</a> 
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"> 
                                <a class="nav-link active" asp-area="" asp-controller="Treatments" asp-action="Index">Treatment</a> 
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"> 
                                <a class="nav-link active" asp-area="" asp-controller="Appointments" asp-action="Index">Appointments</a> 
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Presciptions" asp-action="Index">Prescriptions</a>
                            </li>
                        }
                                @* <li class="nav-item">    *@
                                @*   <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>    *@

                                @*  </li>      *@
                                @* <li class="nav-item">      *@
                                @*  <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>    *@
                                @*  </li>     *@

                        <partial class="nav-link active" name="_LoginPartial"></partial>
                    </ul> 
                            
                </div> 
             </div> 
         </nav> 
     </header> 
     <div class="container" style="color: white;"> 
        <main role="main" class="pb-3"> 
             @RenderBody() 
        </main> 
     </div> 
    <footer class="border-top footer text-muted" style="color: white;">
        <div class="container" style="color: white;">
            &copy; 2024 - OnlineDentalClinic - <a style="color: white;" asp-area="" asp-contoller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
      @await RenderSectionAsync("Scripts", required: false)   
</body>
</html>
